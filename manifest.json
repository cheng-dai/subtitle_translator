{
  "manifest_version": 3,
  "name": "Subtitle Translate (SVT Play)",
  "version": "1.1",
  "description": "Add English subtitles to SVT Play videos",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://www.svtplay.se/*", "https://video.svt.se/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.svtplay.se/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",

    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "138"
}
